<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/shop/orders.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if(orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul>
                    <% orders.forEach(order => { %>
                        <li class="orders__item">
                            <h1>Order - # <%= order._id %> - <a href="/orders/<%= order._id %>">Invoice</a> </h1>
                            <ul class="orders__products">
                                <% order.products.forEach(p => { %>
                                    <li class="orders__products-item"> <%= p.product.title %> (<%= p.quantity %>) 
                                        <div class="orders__total-price">Sub Total $<%= order.total %></div>
                                    </li>
                                <% }); %>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
            <hr>
        </main>
        <%- include('../includes/end.ejs') %>